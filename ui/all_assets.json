{
    "all_assets": {
      "@common.container_screen_exit_animation_push": {},
      "@common.container_screen_exit_animation_pop": {},
      "@common.container_screen_entrance_animation_push": {},
      "@common.container_screen_entrance_animation_pop": {},
      "@common.screen_exit_animation_push_fade": {},
      "@common.screen_exit_animation_pop_fade": {},
      "@common.screen_entrance_animation_push_fade": {},
      "@common.screen_entrance_animation_pop_fade": {}
    },
    		"chat_copy_mode_toggle@common_toggles.light_content_toggle":{
			"$toggle_view_binding_name":"chat_copy_mode_toggle",
			"$pressed_no_hover_texture":"textures/ui/button_borderless_light",
			"$pressed_texture":"textures/ui/button_borderless_light",
			"$toggle_name":"(not $chat_copy_mode)",
			"$button_content":"chat_new.chat_icon_copy_mode",
			"size":[
				27,
				27
			],
			"$icons_color":"$title_text_color",
		"bindings":[
			{
				"binding_type":"view",
				"source_control_name":"chat_copy_mode_toggle",
				"source_property_name":"#toggle_state",
				"target_property_name":"#visible"
			}
		],
    "reset_button@common.button": {
        "offset": [ 0, 5 ],
        "size": [ "75%", "75%" ],
        "$default_texture": "textures/ui/wysiwyg_reset",
        "$hover_texture": "textures/ui/wysiwyg_reset",
        "$pressed_texture": "textures/ui/wysiwyg_reset",
        "$pressed_button_name": "button.menu_ok",
        "controls": [
          {
            "default": {
              "type": "image",
              "texture": "$default_texture"
            }
          },
          {
            "hover": {
              "type": "image",
              "texture": "$hover_texture"
            }
          },
          {
            "pressed": {
              "type": "image",
              "texture": "$pressed_texture"
            }
          }
        ]
      },
      "chat_copy_mode_toggle@common_toggles.light_content_toggle":{
        "$toggle_view_binding_name":"chat_copy_mode_toggle",
        "$pressed_no_hover_texture":"textures/ui/button_borderless_light",
        "$pressed_texture":"textures/ui/button_borderless_light",
        "$toggle_name":"(not $chat_copy_mode)",
        "$button_content":"chat_new.chat_icon_copy_mode",
        "size":[
          27,
          27
        ],
        "$icons_color":"$title_text_color"
      },
      "chat_icon_copy_mode@common.empty_image":{
        "controls":[
          {
            "edit_icon":{
              "type":"label",
              "ignored":"$pressed_state",
              "color":"$text_color",
              "text":"Aa..",
              "size":[
                "default",
                10
              ]
            }
          },
          {
            "edit_icon_back@common.empty_image":{
              "ignored":"(not $pressed_state)",
              "texture":"textures/ui/arrow_left_white",
              "color":"$title_text_color",
              "size":[
                16,
                16
              ]
            }
          }
        ]
      }
  }
  